module sys.types
{
// Some standard types

// A UTF-8 encoded string
typedef bytes string;

// An ISO-8601 date in ASCII 
typedef bytes date;

// An ISO-8601 datetime in ASSCI
typedef bytes datetime;

struct pair<T1,T2>
{
    T1 v1;
    T2 v2;
};

union either<T1,T2>
{
    T1 v1;
    T2 v2;
};

union maybe<T>
{
    void nothing;
    T just;
};

union error<T>
{
    T value;
    string error;
};

};
